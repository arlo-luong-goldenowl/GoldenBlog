<div class="container p-3">
  <div class="row">
    <div class="col-md-6 pt-3">
      <h1 class="text-center text-dark mb-5">Add new category here</h1>
      <%= form_for(@category, url: admin_category_path(@category) ) do |f| %>
        <%= render partial: "shared/error_alert", locals: { object: @category } %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, type: "text", placeholder: "name...", class: "form-control custom-form-control disabled-focus" %>
        </div>
        <%= f.submit "Submit", class: "btn btn-cyan fw-600 text-white disabled-focus mb-1 mt-3" %>
      <% end %>
    </div>
  </div>
</div>
