<div class="p-3">
  <h1>Categories management</h1>
   <%= link_to "Add new category", new_admin_category_path, class: "btn btn-primary btn-sm mb-3" %>
   <%= render partial: "shared/alert" %>
  <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each_with_index do |category, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td>
          <%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-warning btn-sm" %>
          <%= link_to "Delete", admin_category_path(category), method: :delete, data: { confirm: "Are you sure to delete this item ?"}, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @categories, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>
