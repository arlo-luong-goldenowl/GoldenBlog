<div class="row">
  <% if  logged_in? %>
    <div class="col-md-12 d-flex align-items-center">
      <%= image_tag( !current_user.image.blank? ? current_user.image.to_s : "default_avatar.png", class: "float-left circle-image", height: '55px', width: '55px' ) %>
      <div class="ml-3">
        <strong><%=  current_user.email %></strong>
        <br>
        <%= current_user.name %>
      </div>
    </div>
  <% else %>
    <div class="col-md-12 d-flex align-items-center">
      <div class="">
        <%= link_to "Login now !", login_path, class: "text-decoration-none fw-600 font-italic text-secondary" %>
      </div>
    </div>
  <% end %>
  <div class="col-md-12 latest-posts p-3 mt-3 bg-white">
    <p class="text-secondary"><strong>Latest posts</strong></p>
    <% if !@latest_posts.any? %>
      <p class="text-secondary">No more posts</p>
    <% else %>
      <% @latest_posts.each do |post| %>
        <div class="d-flex align-items-center mb-3">
          <%= link_to user_path(post.user), class: "avatar" do %>
          <%= image_tag(post.user.image.present? ?  post.user.image.to_s : 'default_avatar.png') %>
          <% end %>
          <div class="ml-2">
            <%= link_to post.title, post_path(post), class: "text-decoration-none text-dark"  %>
            <br>
            <i class="text-secondary"><%=  time_ago_in_words(post.created_at) %> ago</i>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
