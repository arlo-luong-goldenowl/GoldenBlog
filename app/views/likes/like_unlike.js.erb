var post_element = $('#post-<%= @post.id %>');
var status = '<%= @status %>';
var heart_icon_element = post_element.find('.post-action > .like-btn > i');
var post_likes_element = post_element.find('.post-likes');
if(status === 'true') {
  heart_icon_element
    .removeClass('text-dark fa-heart-o')
    .addClass('text-danger fa-heart heartBeat animated');
}
else {
  heart_icon_element
    .removeClass('text-danger fa-heart heartBeat animated')
    .addClass('text-dark fa-heart-o')
}

post_likes_element.html('<%= @post.likes_counter %> likes');
