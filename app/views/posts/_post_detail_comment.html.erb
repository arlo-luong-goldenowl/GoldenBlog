<div class="comment d-flex">
  <div class="avatar">
    <%= image_tag( comment.user.image.present? ?  comment.user.image.to_s : 'default_avatar.png' ) %>
  </div>
  <div class="mt-2 ml-3">
    <span class="fw-600"><%= comment.user.name %></span>
    <span class="font-weight-normal">
      <%= comment.content %>
    </span>
    <p class="text-secondary"><%= time_ago_in_words comment.created_at %> ago</p>
  </div>
</div>
