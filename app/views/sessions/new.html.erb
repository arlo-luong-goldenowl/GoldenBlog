<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 pt-3">
      <h1 class="text-center">Please login</h1>
      <%= form_for(:session, url: sessions_path) do |f| %>
        <%= render "shared/alert" %>
        <div class="form-group">
          <label for="email"><%= f.label :email %></label>
          <%= f.text_field :email, type: "email", class: "form-control", id: "email" %>
        </div>
        <div class="form-group">
          <label for="password"><%= f.label :password %></label>
          <%= f.text_field :password, type: "password", class: "form-control", id: "password" %>
        </div>
        <%= f.submit "Login", class: "col-md-12 btn btn-success mb-1" %>
        <%= link_to "Signup now with email !", '/', class: "col-md-12 btn btn-outline-success" %>
        <p class="mt-4 text-center font-italic">Or login with</p>
          <div class="circle-btn-group text-center">
            <%= link_to "/", class: "btn gg-bg circle-btn text-white" do %>
              <%= fa_icon "google" %>
            <% end %>
            <%= link_to "/", class: "btn fb-bg circle-btn text-white" do %>
              <%= fa_icon "facebook" %>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>
