<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 pt-3">
      <h1 class="text-center">Sign up here !</h1>
      <%= form_for(@user) do |f| %>
        <%= render "shared/error_alert" %>
        <div class="form-group">
          <label for="name"><%= f.label :name %></label>
          <%= f.text_field :name, type: "text", class: "form-control", id: "name" %>
        </div>
        <div class="form-group">
          <label for="email"><%= f.label :email %></label>
          <%= f.text_field :email, type: "email", class: "form-control", id: "email" %>
        </div>
        <div class="form-group">
          <label for="password"><%= f.label :password %></label>
          <%= f.text_field :password, type: "password", class: "form-control", id: "password" %>
        </div>
        <div class="form-group">
          <label for="password_confirmation"><%= f.label :password_confirmation, "Confirmation" %></label>
          <%= f.text_field :password_confirmation, type: "password", class: "form-control", id: "password_confirmation" %>
        </div>
        <%= f.submit "Submit", class: "col-md-12 btn btn-success mb-1" %>
        <%= link_to "Already have an account ?", '/', class: "col-md-12 btn btn-outline-success" %>
      <% end %>
    </div>
  </div>
</div>
